<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    tools:context="edu.csusb.internationalstudies.registrationPage"
    android:id="@+id/drawer_layout">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView android:text="@string/registrationPageHeader" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/registrationPageHeader"
        android:textSize="25sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/importantRegistrationHeader"
        android:id="@+id/importantRegistrationHeader"
        android:layout_below="@+id/registrationPageHeader"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/infoTextsize"
        android:paddingTop="10sp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/importantRegistrationDescription"
        android:id="@+id/importantRegistrationDescription"
        android:layout_below="@+id/importantRegistrationHeader"
        android:layout_alignRight="@+id/importantRegistrationHeader"
        android:layout_alignEnd="@+id/importantRegistrationHeader"
        android:gravity="center"
        android:autoLink="phone"
        android:textSize="@dimen/descripTextSize"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otherRegistrationDescription"
            android:id="@+id/otherRegistrationDescription"
            android:gravity="center"
            android:layout_below="@+id/importantRegistrationDescription"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="37dp"
            android:autoLink="web"
            android:textSize="@dimen/descripTextSize" />

        </RelativeLayout>
    </ScrollView>

    <ListView
        android:id="@+id/navList"
        android:layout_width="200sp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:gravity="right"
        android:background="#EEE" />

</android.support.v4.widget.DrawerLayout>