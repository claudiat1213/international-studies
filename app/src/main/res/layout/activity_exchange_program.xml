<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    tools:context="edu.csusb.internationalstudies.exchangeProgram"
    android:id="@+id/drawer_layout">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ExchangeprogramContent"
            android:id="@+id/textView2"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/descripTextSize"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/textView7" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/NationalStudentExchangeProgram"
            android:id="@+id/button2"
            android:onClick="startNseWebsite"
            android:gravity="center"
            android:paddingTop="10dp"
            android:layout_below="@+id/exchangeProgramHeaderImage"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/national_student_exchange_program"
            android:scaleType="fitCenter"
            android:background="#00000000"/>

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/exchangeFinancialAid"
            android:id="@+id/button3"
            android:gravity="center"
            android:onClick="startCSUSBNseWebsite"
            android:layout_below="@+id/button2"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/exchange_program_financial_aid_button"
            android:scaleType="fitCenter"
            android:background="#00000000"/>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/exchangeProgram121Header"
            android:id="@+id/textView7"
                android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/infoTextsize"
            android:layout_below="@+id/button3"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exchangeProgram121Body"
            android:id="@+id/textView8"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textSize="@dimen/descripTextSize"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/exchange_program"
            android:id="@+id/exchangeProgramHeaderImage"/>
</RelativeLayout>
</ScrollView>
    <ListView
        android:id="@+id/navList"
        android:layout_width="200sp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:gravity="right"
        android:background="#EEE" />


</android.support.v4.widget.DrawerLayout>