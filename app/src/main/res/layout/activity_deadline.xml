<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    tools:context="edu.csusb.internationalstudies.Deadline"
    android:id="@+id/drawer_layout">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10sp"
        android:id="@+id/deadlineTable"
        android:textAlignment="center"
        android:layout_below="@+id/deadlineHeaderImage"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dip" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Application Deadline"
            android:gravity="center"
            android:textSize="@dimen/infoTextsize"
            android:layout_span="3"
            android:background="#ffffffff" /> </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Term"
            android:textSize="@dimen/descripTextSize"
            android:background="#ffffffff"
            android:gravity="center_horizontal"
            android:paddingRight="@dimen/paddingDeadline"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Undergraduate"
            android:gravity="center_horizontal"
            android:textSize="@dimen/descripTextSize"
            android:background="#ffffffff"
            android:paddingRight="@dimen/paddingDeadline"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graduate"
            android:textSize="@dimen/descripTextSize"
            android:background="#ffffffff"
            android:gravity="center_horizontal"
            android:paddingRight="@dimen/paddingDeadline"/> </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fall"
                android:gravity="center"
                android:textSize="@dimen/descripTextSize"
                android:background="#ffffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="July 1st"
                android:gravity="center"
                android:textSize="@dimen/descripTextSize"
                android:background="#ffffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="July 17th"
                android:gravity="center"
                android:textSize="@dimen/descripTextSize"
                android:background="#ffffffff" /> </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Winter"
                android:gravity="center"
                android:textSize="@dimen/descripTextSize"
                android:background="#ffffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec. 15th"
                android:gravity="center"
                android:textSize="@dimen/descripTextSize"
                android:background="#ffffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oct. 20th"
                android:gravity="center"
                android:textSize="@dimen/descripTextSize"
                android:background="#ffffffff" /> </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spring"
                android:gravity="center"
                android:textSize="@dimen/descripTextSize"
                android:background="#ffffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feb. 15th"
                android:gravity="center"
                android:textSize="@dimen/descripTextSize"
                android:background="#ffffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan. 20th"
                android:gravity="center"
                android:textSize="@dimen/descripTextSize"
                android:background="#ffffffff" /> </TableRow>


    </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deadlineDescription"
            android:id="@+id/deadlineDescription"
            android:layout_below="@+id/deadlineTable"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/descripTextSize"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/other_resources"
            android:adjustViewBounds="true"
            android:id="@+id/deadlineHeaderImage"/>

        </RelativeLayout>
    </ScrollView>
    <ListView
        android:id="@+id/navList"
        android:layout_width="200sp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:gravity="right"
        android:background="#EEE"
        android:textFilterEnabled="false" />

</android.support.v4.widget.DrawerLayout>