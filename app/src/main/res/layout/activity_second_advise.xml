<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.csusb.internationalstudies.secondAdvise">

    <TextView android:text="@string/headerAdvise" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/headerAdvise" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adviseParagraph"
        android:id="@+id/adviseDescrip"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cispButtonTitle"
        android:id="@+id/cispButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="startAboutCisp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/informationItemButtonTitle"
        android:id="@+id/informationItemButton"
        android:layout_below="@+id/cispButton"
        android:layout_centerHorizontal="true"
        android:onClick="startInformationalItems"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/testOrientationButtonTitle"
        android:id="@+id/testOrientationButton"
        android:layout_below="@+id/informationItemButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
