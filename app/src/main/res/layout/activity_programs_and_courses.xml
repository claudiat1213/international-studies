<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    tools:context="edu.csusb.internationalstudies.programsAndCourses"
    android:id="@+id/drawer_layout">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/courseListings"
            android:id="@+id/CourseListingsButton"
            android:onClick="startCourseListingsWebsite"
            android:layout_below="@+id/programsCoursesImage"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/course_listings_button" />

            <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/ge_courses_button"
            android:id="@+id/geCoursesButton"
            android:onClick="openGeCourses"
            android:layout_below="@+id/CourseListingsButton"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ge_courses_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/programsandcoursesheader1"
            android:id="@+id/programsCoursesText2"
            android:gravity="center"
            android:layout_below="@+id/geCoursesButton"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="@dimen/descripTextSize"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/programsandcoursesheader2"
            android:id="@+id/programsCoursesText3"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/programsCoursesText2"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/descripTextSize"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/programsandcoursesheader3"
            android:id="@+id/programsCoursesText4"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/programsCoursesText3"
            android:textSize="@dimen/descripTextSize"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/programsCoursesImage"
            android:layout_centerHorizontal="true"
            android:src="@drawable/academic_advising"
            android:adjustViewBounds="true"
            android:contentDescription="@string/academicAdvisingImage" />

    </RelativeLayout>
</ScrollView>
    <ListView
        android:id="@+id/navList"
        android:layout_width="200sp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:gravity="right"
        android:background="#EEE" />
</android.support.v4.widget.DrawerLayout>