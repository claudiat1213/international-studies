
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    tools:context="edu.csusb.internationalstudies.admissionsInfo"
    android:id="@+id/drawer_layout">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/admissionsUndergrad"
        android:id="@+id/admissionsUndergrad"
        android:layout_below="@+id/admissionsInfoHeaderImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:onClick="openAdmissionsUndergrad"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/admissionsGrad"
        android:id="@+id/admissionsGrad"
        android:layout_below="@+id/admissionsUndergrad"
        android:layout_alignLeft="@+id/admissionsUndergrad"
        android:layout_alignStart="@+id/admissionsUndergrad"
        android:layout_alignRight="@+id/admissionsUndergrad"
        android:layout_alignEnd="@+id/admissionsUndergrad"
        android:onClick="openAdmissionsGrad"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/admissionsMBA"
        android:id="@+id/admissionsMBA"
        android:layout_below="@+id/admissionsGrad"
        android:layout_alignLeft="@+id/admissionsGrad"
        android:layout_alignStart="@+id/admissionsGrad"
        android:layout_alignRight="@+id/admissionsUndergrad"
        android:layout_alignEnd="@+id/admissionsUndergrad"
        android:onClick="openAdmissionsMBA"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/admissionsCSUMentor"
        android:id="@+id/admissionsCSUMentor"
        android:layout_below="@+id/admissionsMBA"
        android:layout_alignLeft="@+id/admissionsMBA"
        android:layout_alignStart="@+id/admissionsMBA"
        android:layout_alignRight="@+id/admissionsMBA"
        android:layout_alignEnd="@+id/admissionsMBA"
        android:onClick="openCSUMentor"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admissionsInfoHeaderImage"
        android:src="@drawable/admissions"
        android:adjustViewBounds="true" />
    </RelativeLayout>
    </ScrollView>
    <ListView
        android:id="@+id/navList"
        android:layout_width="200sp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:gravity="right"
        android:background="#EEE"
        android:textFilterEnabled="false" />

</android.support.v4.widget.DrawerLayout>
