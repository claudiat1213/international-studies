
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    tools:context="edu.csusb.internationalstudies.admissionsInfo"
    android:id="@+id/drawer_layout">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/admissionsUndergrad"
        android:id="@+id/admissionsUndergrad"
        android:layout_below="@+id/admissionsInfoHeaderImage"
        android:onClick="openAdmissionsUndergrad"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/undergraduate_program_button"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:contentDescription="@string/admissionsUndergrad"/>

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/admissionsGrad"
        android:id="@+id/admissionsGrad"
        android:layout_below="@+id/admissionsUndergrad"
        android:onClick="openAdmissionsGrad"
        android:src="@drawable/graduate_mba_programs_button"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:contentDescription="@string/admissionsGrad"/>

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/admissionsMBA"
        android:id="@+id/admissionsMBA"
        android:layout_below="@+id/admissionsGrad"
        android:onClick="openAdmissionsMBA"
        android:src="@drawable/graduate_mba_programs_button"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:contentDescription="@string/admissionsMBA"/>

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/admissionsCSUMentor"
        android:id="@+id/admissionsCSUMentor"
        android:layout_below="@+id/admissionsMBA"
        android:onClick="openCSUMentor"
        android:src="@drawable/access_cse_mentor_button"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:contentDescription="@string/admissionsCSUMentor"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admissionsInfoHeaderImage"
        android:src="@drawable/admissions"
        android:adjustViewBounds="true"
        android:contentDescription="@string/admissionsHeader" />
    </RelativeLayout>
    </ScrollView>
    <ListView
        android:id="@+id/navList"
        android:layout_width="200sp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:gravity="right"
        android:background="#EEE"
        android:textFilterEnabled="false" />

</android.support.v4.widget.DrawerLayout>
