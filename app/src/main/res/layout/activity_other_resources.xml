<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    tools:context="edu.csusb.internationalstudies.otherResources"
    android:id="@+id/drawer_layout">

 <ScrollView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/otherResourcesHeader"
        android:id="@+id/otherResourceHeader"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="15sp" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/healthInsuranceButtonTitle"
        android:id="@+id/healthInsuranceButtonTitle"
        android:layout_below="@+id/otherResourcesHeaderImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="openHealthInsurance"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/find_health_insurance_button"/>

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/campusMapButtonTitle"
        android:id="@+id/campusMapButton"
        android:layout_below="@+id/healthInsuranceButtonTitle"
        android:layout_centerHorizontal="true"
        android:onClick="openCampusMap"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/campus_map_button"/>

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/housingButtonTitle"
        android:id="@+id/housingButton"
        android:layout_below="@+id/campusMapButton"
        android:layout_centerHorizontal="true"
        android:onClick="openHousingPage"
        android:nestedScrollingEnabled="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/learn_about_housing_button"/>

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deadlineButton"
        android:layout_below="@+id/housingButton"
        android:layout_centerHorizontal="true"
        android:text="@string/deadlineButtonTitle"
        android:onClick="openDeadline"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/view_application_deadlines"/>

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/otherResourcesNewsAndWeather"
        android:id="@+id/button8"
        android:layout_below="@+id/deadlineButton"
        android:onClick="openNewsAndWeather"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/news_weather_button"/>

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/registrationButton"
        android:id="@+id/registrationButton"
        android:layout_below="@+id/button8"
        android:layout_centerHorizontal="true"
        android:onClick="openRegistrationPage"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/registration_button"/>

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/eventsButton"
        android:id="@+id/eventsButton"
        android:layout_below="@+id/registrationButton"
        android:onClick="openEventsPage"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/discover_social_events"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/other_resources"
        android:adjustViewBounds="true"
        android:id="@+id/otherResourcesHeaderImage"/>

    </RelativeLayout>
 </ScrollView>

    <ListView
        android:id="@+id/navList"
        android:layout_width="200sp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:gravity="right"
        android:background="#EEE"
        android:textFilterEnabled="false" />

</android.support.v4.widget.DrawerLayout>
