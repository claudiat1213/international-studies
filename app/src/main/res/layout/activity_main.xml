<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:fillViewport="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/mainAboutCispTitle"
            android:id="@+id/mainAboutButton"
            android:onClick="startAboutCisp"
            android:adjustViewBounds="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/main_page_banner"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/about_us_button"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:contentDescription="@string/mainAboutCispTitle"/>
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/mainAdviseTitle"
            android:id="@+id/mainAdviseButton"
            android:onClick="startSecondAdvise"
            android:adjustViewBounds="true"
            android:layout_below="@+id/mainAboutButton"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/academic_advising_button"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/mainAdviseTitle"/>
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/mainAdmissionsTitle"
            android:id="@+id/mainAdmissionButton"
            android:onClick="openAdmissions"
            android:adjustViewBounds="true"
            android:layout_below="@+id/mainAdviseButton"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/admissions_button"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/mainAdmissionsTitle"/>

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/mainStudyTitle"
            android:id="@+id/mainStudyButton"
            android:onClick="openStudyAbroad"
            android:adjustViewBounds="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/mainAdmissionButton"
            android:src="@drawable/study_abroad_button"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/mainStudyTitle"/>


        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/mainExchangeTitle"
            android:id="@+id/mainExchangeButton"
            android:onClick="startexchangeProgram"
            android:adjustViewBounds="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/mainStudyButton"
            android:src="@drawable/exchange_program_button"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/mainExchangeTitle"/>

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/mainOtherTitle"
            android:id="@+id/mainOtherButton"
            android:onClick="openOtherResources"
            android:adjustViewBounds="true"
            android:layout_below="@+id/mainExchangeButton"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/other_resources_button"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/mainOtherTitle"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_page_banner"
            android:src="@drawable/main_page"
            android:adjustViewBounds="true"
            android:contentDescription="@string/mainTitle"/>


    </RelativeLayout>
</ScrollView>