<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainTitle"
        android:id="@+id/welcomeView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_alignParentTop="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainAboutCispTitle"
        android:id="@+id/mainAboutButton"
        android:layout_above="@+id/mainAdviseButton"
        android:layout_centerHorizontal="true"
        android:onClick="startAboutCisp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainAdviseTitle"
        android:id="@+id/mainAdviseButton"
        android:layout_alignBottom="@+id/mainAdmissionButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:onClick="startSecondAdvise"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainAdmissionsTitle"
        android:id="@+id/mainAdmissionButton"
        android:layout_marginTop="140dp"
        android:layout_below="@+id/welcomeView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainStudyTitle"
        android:id="@+id/mainStudyButton"
        android:layout_below="@+id/mainAdmissionButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainExchangeTitle"
        android:id="@+id/mainExchangeButton"
        android:layout_below="@+id/mainStudyButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainServicesTitle"
        android:id="@+id/mainServicesButton"
        android:layout_below="@+id/mainExchangeButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainOtherTitle"
        android:id="@+id/mainOtherButton"
        android:layout_below="@+id/mainServicesButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>




</RelativeLayout>
