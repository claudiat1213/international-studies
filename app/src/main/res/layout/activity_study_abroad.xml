
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    tools:context="edu.csusb.internationalstudies.StudyAbroad"
    android:id="@+id/drawer_layout">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/studyAbroad_programsButton"
        android:id="@+id/button6"
        android:onClick="openStudyAbroadProgramsList"
        android:layout_below="@+id/button7"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/browse_programs_button"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:contentDescription="@string/studyAbroad_programsButton"/>

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/studyAbroad_applicationButton"
        android:id="@+id/button7"
        android:onClick="openHorizonApplication"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/studyAbroadHeaderImage"
        android:src="@drawable/horizon_application_button"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:contentDescription="@string/title_activity_study_abroad_horizon_application"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/studyAbroad_body"
        android:id="@+id/textView6"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:textSize="@dimen/descripTextSize"
        android:layout_below="@+id/button13"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/study_abroad"
        android:id="@+id/studyAbroadHeaderImage"
        android:adjustViewBounds="true"
        android:contentDescription="@string/studyAbroad_title"/>

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/studyAbroad_scholarshipButton"
        android:id="@+id/button4"
        android:layout_below="@+id/button6"
        android:onClick="openGilmanScholarship"
        android:src="@drawable/gilman"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:contentDescription="@string/title_activity_study_abroad_gilman_scholarship"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button13"
        android:layout_below="@+id/button4"
        android:onClick="openFullBrightProgram"
        android:src="@drawable/newfullbright"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:contentDescription="@string/full_bright_text_button"/>


    </RelativeLayout>
    </ScrollView>
    <ListView
        android:id="@+id/navList"
        android:layout_width="200sp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:gravity="right"
        android:background="#EEE"
        android:textFilterEnabled="false" />

</android.support.v4.widget.DrawerLayout>
